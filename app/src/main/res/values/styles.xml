<resources>



    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:textColorSecondaryInverse">#FAFAFA</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>
    <style name="BlueTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">#008FFF</item>
    </style>

    <style name="NumberStyle">
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#000000</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="btnOK">
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">#5CC4F3</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#EE2C1E</item>
    </style>
    <style name="TextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center|center_vertical</item>
    </style>
    <style name="ToggleSwitchTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">#46bdbf</item>
    </style>

    <style name="myTimePickerStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:numbersTextColor">#ffffff</item>
        <item name="android:numbersBackgroundColor">@color/white1</item>
        <item name="android:numbersSelectorColor">#88000000</item>
        <item name="android:headerBackground">@color/white1</item>
    </style>
</resources>